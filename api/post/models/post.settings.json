{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "text"
    },
    "media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "upvotes": {
      "type": "integer"
    },
    "downvotes": {
      "type": "integer"
    },
    "comments": {
      "via": "post",
      "collection": "comment"
    },
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "topics": {
      "via": "post",
      "collection": "topic"
    }
  }
}
